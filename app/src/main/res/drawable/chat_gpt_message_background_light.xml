<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color for the message bubble. -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/background_100" />
            <corners
                android:radius="@dimen/sb_size_16"/>
            <stroke
                android:width="@dimen/sb_size_1"
                android:color="@color/onlight_04" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/background_50" />
            <corners
                android:radius="@dimen/sb_size_16"/>
            <stroke
                android:width="@dimen/sb_size_1"
                android:color="@color/onlight_04" />
        </shape>
    </item>
</selector>
