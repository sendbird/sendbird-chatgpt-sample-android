<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vgChannelSelectTypeItem"
    android:orientation="vertical"
    android:layout_weight="1"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sb_size_72"
    android:background="@drawable/sb_button_uncontained_background_light">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivIcon"
        android:layout_width="@dimen/sb_size_24"
        android:layout_height="@dimen/sb_size_24"
        android:scaleType="centerCrop"
        android:tint="@color/primary_300"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_marginTop="@dimen/sb_size_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/SendbirdCaption2OnLight02"/>
</LinearLayout>
