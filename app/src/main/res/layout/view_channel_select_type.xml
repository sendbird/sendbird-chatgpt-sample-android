<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_50"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_marginLeft="@dimen/sb_size_24"
        android:layout_marginRight="@dimen/sb_size_0"
        android:text="@string/sb_text_select_channel_type"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/sb_size_56"
        android:layout_marginStart="@dimen/sb_size_24"
        android:layout_marginEnd="@dimen/sb_size_0"
        android:textAppearance="@style/SendbirdH1OnLight01"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvChannelType"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>
